<config>
    <modules>
        <Zozoconcepts_Catalogcategorysearch>
            <version>1.0.0</version>
        </Zozoconcepts_Catalogcategorysearch>
    </modules>
    <global>
        <blocks>
            <catalogcategorysearch>
                <class>Zozoconcepts_Catalogcategorysearch_Block</class>
            </catalogcategorysearch>
        </blocks>
        <helpers>
            <catalogcategorysearch>
                <class>Zozoconcepts_Catalogcategorysearch_Helper</class>
            </catalogcategorysearch>
        </helpers>
		<models>
            <catalogcategorysearch>
                <class>Zozoconcepts_Catalogcategorysearch_Model</class>
            </catalogcategorysearch>
        </models>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Zozoconcepts_Catalogcategorysearch>
                     <files>
                          <default>Zozoconcepts_Catalogcategorysearch.csv</default>
                     </files>
                </Zozoconcepts_Catalogcategorysearch>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <translate>
            <modules>
                <Zozoconcepts_Catalogcategorysearch>
                     <files>
                          <default>Zozoconcepts_Catalogcategorysearch.csv</default>
                     </files>
                </Zozoconcepts_Catalogcategorysearch>
            </modules>
        </translate>
        <layout>
            <updates>
                <catalogcategorysearch>
                    <file>catalogcategorysearch.xml</file>
                </catalogcategorysearch>
            </updates>
        </layout>
    </frontend>
    <default>
        <hybrid>
            <header>
                <select_category_on_category_pages>1</select_category_on_category_pages>
                <show_subcategories>1</show_subcategories>
                <indentation_text><![CDATA[> ]]></indentation_text>
            </header>
        </hybrid>
    </default>
</config>
