            <category_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Category</label>
                <type>label</type>
                <helper_block>
                    <type>zozoconcepts_blog/adminhtml_category_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Category</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>130</sort_order>
            </category_id>
        </parameters>
    </blog_category_link>
</widgets>
