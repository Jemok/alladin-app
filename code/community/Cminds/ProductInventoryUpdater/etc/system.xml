<?xml version="1.0"?>
<config>
    <sections>
        <supplierfrontendproductuploader_products>
            <groups>
                <inventory_import translate="label"
                      module="supplierfrontendproductuploader">
                    <label>Inventory Import</label>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <fields>
                        <enable translate="label"
                           module="supplierfrontendproductuploader">
                            <label>Enable Inventory Import</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                        </enable>
                        <logging translate="label"
                           module="supplierfrontendproductuploader">
                            <label>Enable Logging</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                        </logging>
                        <notify_on_cost_change translate="label"
                           module="supplierfrontendproductuploader">
                            <label>Notify When Cost Value Changed</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <comment><![CDATA[The email notification will be send to General Contact when vendor updates his cost attribute]]></comment>
                        </notify_on_cost_change>
                    </fields>
                </inventory_import>
            </groups>
        </supplierfrontendproductuploader_products>
    </sections>
</config>
