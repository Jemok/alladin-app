<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
  <system>
    <tab id="zozothemes" translate="label" sortOrder="100">
      <label>Zozothemes Extensions</label>
    </tab>
    <section id="ajaxscroll" translate="label" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>Ajax Scroll</label>
      <tab>zozothemes</tab>
      <resource>Zozothemes_Ajaxscroll::system_config</resource>
      <group id="general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>General</label>
        <field id="enabled" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Use Ajax Scoll Products List </label>
          <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>
        <!--<field id="enabled_top" translate="label" sortOrder="1" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Show Top Button</label>
          <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>-->
        <field id="topb_icon" translate="label comment" sortOrder="10" type="image" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Top Icon</label>
          <backend_model>Magento\Config\Model\Config\Backend\Image</backend_model>
          <upload_dir config="system/filesystem/media" scope_info="1">zozothemes/ajaxscroll</upload_dir>
          <base_url type="media" scope_info="1">zozothemes/ajaxscroll</base_url>
        </field>
        <field id="loading_icon" translate="label comment" sortOrder="11" type="image" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Loading Bar</label>
          <backend_model>Magento\Config\Model\Config\Backend\Image</backend_model>
          <upload_dir config="system/filesystem/media" scope_info="1">zozothemes/ajaxscroll</upload_dir>
          <base_url type="media" scope_info="1">zozothemes/ajaxscroll</base_url>
        </field>
        <field id="loading_img" translate="label comment" sortOrder="12" type="image" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Loading Image</label>
          <backend_model>Magento\Config\Model\Config\Backend\Image</backend_model>
          <upload_dir config="system/filesystem/media" scope_info="1">zozothemes/ajaxscroll</upload_dir>
          <base_url type="media" scope_info="1">zozothemes/ajaxscroll</base_url>
        </field>
      </group>
    </section>
  </system>
</config>