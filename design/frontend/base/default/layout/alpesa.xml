<?xml version="1.0" encoding="UTF-8"?><layout version="0.1.0">    <default>        <reference name="head">            <action method="addCss">                <name>alpesa/css/alpesa.css</name>            </action>            <action method="addCss">                <name>alpesa/css/bootstrap-tiny.css</name>            </action>            <action method="addItem">                <type>skin_js</type>                <name>alpesa/js/alpesa.js</name>            </action>        </reference>    </default>       <alpesa_index_index>        <reference name="root">            <action method="setTemplate">                <template>page/1column.phtml</template>            </action>        </reference>        <reference name="content">            <block type="alpesa/alpesacustomer" name="alpesashop" template="alpesa/alpesashop.phtml" />        </reference>    </alpesa_index_index>       <customer_account>                <reference name="customer_account_navigation">            <action method="addLink" translate="label">                <name>alpesawallet</name>                <path>alpesa/customer/wallet/</path>                <label>Alpesa Wallet</label>            </action>            <action method="addLink" translate="label">                <name>alpesareedem</name>                <path>alpesa/customer/reedem/</path>                <label>Alpesa Reedem</label>            </action>            <action method="addLink" translate="label">                <name>alpesarefer</name>                <path>alpesa/refer/get/</path>                <label>Alpesa Referral program</label>            </action>        </reference>                <reference name="left">            <block type="alpesa/alpesacustomer" name="alpesacustomernavigation" after="customer_account_navigation" before="sidebar" template="alpesa/alpesacustomernavigation.phtml" />        </reference>                <!--<reference name="after_body_starts">            <block type="alpesa/alpesacustomernavigation" name="alpesacustomernavigation" template="alpesa/alpesacustomernavigation.phtml" />        </reference>-->            </customer_account>       <alpesa_customer_reedem>        <update handle="customer_account" />        <reference name="my.account.wrapper">            <block type="alpesa/alpesacustomer" name="alpesareedem" template="alpesa/alpesareedempoints.phtml" >                <block type="alpesa/alpesacustomer" name="alpesatopnav" template="alpesa/alpesatopnav.phtml" />            </block>        </reference>    </alpesa_customer_reedem>       <alpesa_customer_wallet>        <update handle="customer_account" />        <reference name="my.account.wrapper">            <block type="alpesa/alpesacustomer" name="alpesawallet" template="alpesa/alpesawallet.phtml">                <block type="alpesa/alpesacustomer" name="alpesatopnav" template="alpesa/alpesatopnav.phtml" />            </block>        </reference>    </alpesa_customer_wallet>       <alpesa_customer_feedback>        <update handle="customer_account" />        <reference name="my.account.wrapper">            <block type="alpesa/alpesacustomer" name="alpesafeeback" template="alpesa/alpesafeeback.phtml" >                <block type="alpesa/alpesacustomer" name="alpesatopnav" template="alpesa/alpesatopnav.phtml" />            </block>        </reference>    </alpesa_customer_feedback>          <alpesa_customer_summary>        <update handle="customer_account" />        <reference name="my.account.wrapper">            <block type="alpesa/alpesacustomer" name="alpesasummary" template="alpesa/alpesasummary.phtml">                <block type="alpesa/alpesacustomer" name="alpesatopnav" template="alpesa/alpesatopnav.phtml" />            </block>        </reference>    </alpesa_customer_summary>             <alpesa_customer_invoice>        <update handle="customer_account" />        <reference name="my.account.wrapper">            <block type="alpesa/alpesacustomer" name="alpesainvoice" template="alpesa/alpesainvoice.phtml">                <block type="alpesa/alpesacustomer" name="alpesatopnav" template="alpesa/alpesatopnav.phtml" />            </block>        </reference>    </alpesa_customer_invoice>                 <alpesa_customer_history>        <update handle="customer_account" />        <reference name="my.account.wrapper">            <block type="alpesa/alpesacustomer" name="alpesahistory" template="alpesa/alpesahistory.phtml" >                <block type="alpesa/alpesacustomer" name="alpesatopnav" template="alpesa/alpesatopnav.phtml" />            </block>        </reference>    </alpesa_customer_history>                 <alpesa_refer_get>        <update handle="customer_account" />        <reference name="my.account.wrapper">            <block type="alpesa/alpesacustomer" name="alpesarefer" template="alpesa/alpesarefer.phtml" >                <block type="alpesa/alpesacustomer" name="alpesatopnav" template="alpesa/alpesatopnav.phtml" />            </block>        </reference>    </alpesa_refer_get>      </layout>